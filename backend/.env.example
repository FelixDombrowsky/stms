#############################
# Backend Server
#############################
# Port ที่ backend จะรัน (เช่น 8800)
PORT=8800


#############################
# MySQL Database (ใช้โดย app)
#############################
# Host ของ MySQL (ถ้าใช้ Docker ให้ใช้ชื่อ service เช่น "mysql_db")
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_DATABASE=stms_db


#############################
# Prisma Database URL (ใช้โดย Prisma Client)
#############################
# รูปแบบ:
# mysql://USER:PASSWORD@HOST:PORT/DATABASE
# ตัวอย่าง:
# mysql://admin:password123@localhost:3306/stms_db
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/stms_db"


#############################
# Modbus Configuration (ถ้ามีเชื่อมต่ออุปกรณ์)
#############################
# Port สำหรับ Windows
MODBUS_PORT=COM12

# Port สำหรับ Linux / Raspberry Pi
MODBUS_PORT_LINUX=/dev/ttyUSB0

# Baud rate
MODBUS_BAUD=9600